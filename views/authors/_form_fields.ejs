<div class="row my-3">
  <label class="form-label mx-2">
    <h3>Full Name</h3>
  </label>

  <input
    type="text"
    name="name"
    value="<%= author.name %>"
    style="width: 28rem"
    class="form-control mx-3"
    placeholder="Example: John Doe"
  />
</div>

<div class="row mt-3">
  <label class="form-label mx-2">
    <h3>Email</h3>
  </label>
  <input
    type="email"
    name="email"
    value="<%= author.email %>"
    style="width: 28rem"
    class="form-control mx-3"
    placeholder="Example: john.doe@test.com"
  />
</div>
